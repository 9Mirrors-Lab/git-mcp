{
  "compilerOptions": {
    "target": "ES2022",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "outDir": "dist",
    "declaration": true,
    "sourceMap": true,
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "noEmit": true,
    "incremental": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "plugins": [
      {
        "name": "next"
      }
    ],
    "module": "esnext",
    "moduleResolution": "node"
  },
  "include": [
    "api/*",
    "api/**/*",
    "lib/**/*",
    "app/**/*",
    "scripts/**/*",
    ".next/types/**/*.ts",
    "shared/**/*",
    "shared/*"
  ],
  "exclude": [
    "node_modules"
  ]
}
